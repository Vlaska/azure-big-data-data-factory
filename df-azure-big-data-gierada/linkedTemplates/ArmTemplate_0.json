		"databricks_storage_accessToken": {
			"type": "secureString",
			"metadata": "Secure string for 'accessToken' of 'databricks_storage'"
		},
		"social_media_analysis_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'social_media_analysis'"
		},
		"storage_account_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'storage_account'"
		},

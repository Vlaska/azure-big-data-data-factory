					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": "social_network_data.csv",
						"fileSystem": "stagin"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Timestamp",
						"type": "String"
					},
					{
						"name": "IP",
						"type": "String"
					},
					{
						"name": "Device",
						"type": "String"
					},
					{
						"name": "Action",

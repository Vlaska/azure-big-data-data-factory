						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"notebookPath": "/Shared/social_media_log/analyse_data"
						},
						"linkedServiceName": {
							"referenceName": "data_processing",
							"type": "LinkedServiceReference"

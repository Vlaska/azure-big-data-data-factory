						"linkedServiceName": {
							"referenceName": "data_processing",
							"type": "LinkedServiceReference"
						}
					},
					{
						"name": "Analyse data",
						"type": "DatabricksNotebook",
						"dependsOn": [
							{
								"activity": "Process data",
								"dependencyConditions": [
									"Succeeded"
								]

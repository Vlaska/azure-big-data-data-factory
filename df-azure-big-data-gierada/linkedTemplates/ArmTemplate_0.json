					},
					{
						"name": "Device",
						"type": "string"
					},
					{
						"name": "Action",
						"type": "string"
					},
					{
						"name": "Description",
						"type": "string"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/databricks_storage')]"

				"typeProperties": {
					"domain": "https://adb-4991412674118956.16.azuredatabricks.net",
					"clusterId": "0110-153719-njuctzsg",
					"accessToken": {
						"type": "SecureString",
						"value": "[parameters('databricks_storage_accessToken')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/social_media_analysis')]",
